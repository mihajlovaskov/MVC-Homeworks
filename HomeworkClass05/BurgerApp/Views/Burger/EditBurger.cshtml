@using BurgerApp.Models.ViewModels

@model BurgerViewModel

<h4>Edit burger</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditBurgerPost" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="IsVegan" class="control-label"></label>
                <input asp-for="IsVegan" type="checkbox"/>
            </div>
            <div class="form-group">
                <label asp-for="IsVegetarian" class="control-label"></label>
                <input asp-for="IsVegetarian" type="checkbox"/>
            </div>
            <div class="form-group">
                <label asp-for="HasFries" class="control-label"></label>
                <input asp-for="HasFries" type="checkbox"/>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" type="number" class="form-control" />
            </div>
            <br />
            <button type="submit" class="btn btn-outline-dark">Save</button>
        </form>
    </div>
</div>